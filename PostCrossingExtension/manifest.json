{
  "manifest_version": 2,
  "name": "PostCrossing Tab Sorter",
  "version": "1.0",
  "description": "Sort all open PostCrossing postcard tabs by their numeric ID.",
  "permissions": ["tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "PostCrossing Tab Sorter"
  },
  "icons": {
    "48": "icons/icon-48.jpg"
  }
}
